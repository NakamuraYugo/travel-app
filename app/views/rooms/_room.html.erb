<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-2">
    <div class="card"><!--img class="card-img-top" src="/assets/board_placeholder.png" width="300" height="200"/ -->
      <h1>登録済みルーム一覧</h1>

      <table>
        <thead>
          <tr>
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>料金</th>
            <th>作成日</th>
          </tr>
        </thead>

        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= room.room_image %></td>
              <td><%= link_to room.name, "#" %></td> <!--リンク先はroom予約サイト詳細画面に飛ぶようにする -->
              <td><%= room.introduction %></td>
              <td><%= task.price %></td>
              <td><%= task.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>